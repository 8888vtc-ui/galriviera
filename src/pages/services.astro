  .fleet-card {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
  }
  
  .fleet-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }
  
  .fleet-info {
    padding: 1rem;
    text-align: center;
  }
  
  .fleet-info strong {
    display: block;
    color: #002366;
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }
  
  .fleet-info span {
    color: #888;
    font-size: 0.85rem;
  }
  
  /* CTA Section */
